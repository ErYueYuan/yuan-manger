<template>
  <div class="fun-top-panel bg7">
    <span class="mess-back " v-if="topPanel.back && !topPanel.icons"><div class="cont" @click="back()"></div></span>
    <div :class="topPanel.icons" v-if="topPanel.back && topPanel.icons" @click="back()"></div>
    <span class="title c33 f3 dblock2 t-center ">{{topPanel.titles}}</span>
    <span class="right"><b class="fun-icon icon-home" title="首页"></b></span>
  </div>
</template>

<script>
  export default {
    name: "top-panel",
    props: {
      topPanel: {
        type: Object, //要求父组件数据传输类型
        required: true  //必传
      }
    },
    methods: {
      back() {
        if (typeof this.topPanel.back != 'boolean') {
          this.$router.push(this.topPanel.back);
        } else {
          this.$router.go(-1)
        }
      },
    }
  }
</script>

