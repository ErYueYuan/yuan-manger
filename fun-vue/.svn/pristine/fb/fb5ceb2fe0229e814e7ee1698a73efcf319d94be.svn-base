@charset "utf-8";
/* CSS Document */

.login-box{ margin:60px auto;padding:0 15px;}
.login-box.reset{margin:44px auto;}
.login-box.modify{margin:10px auto;}

.login-info-box{padding:20px  0 10px;}
.login-info-box.reg{ padding:0 0 10px;}

.login-input{  line-height:58px; position:relative; background-color:#fff;border-bottom:1px solid #EEE;border-radius:0px;}
.login-input span{ display: inline-block;width:110px; }
.login-input input{padding:8px 0 8px 0px; line-height:30px;border: 0;width:52%; background-color: transparent;}
.login-input .hidden{ position:absolute;right:10px;top:20px; width:24px; height:24px;background: url(../img/hide.png) 0 0 no-repeat; background-size:100% auto;}
.login-input .show-it{ position:absolute;right:10px;top:15px; width:24px; height:24px;background: url(../img/show.png) 0 0px no-repeat; background-size:100% auto;}

.log-bot{ position:fixed;margin:0 auto;left:0;right:0;width:90%;bottom:10px;}
.log-logo{ margin: 40px auto;width:20.4%;}


label.reg-check1 {display:block;padding:0; font-size: 14px; font-weight: normal; color:#999;}/*整行*/
label.reg-check1  b{ position:absolute;left:0px;top:1px; display: inline-block; vertical-align:-2px;width:20px;height:20px; background:none; background-color: #FFF; border:1px solid #FD5147; border-radius: 100%;}
label.reg-check1 input{ position:absolute;left:10px;top:0; opacity: 0;width:0px;height:0px;}
label.reg-check1 input:checked  +  b{border-radius: 100%;background:url(../img/sel.png) 0 0 no-repeat; background-size:100% auto; border:0; }
label.reg-check1 span{ display: block; margin-left:30px; text-align: left; line-height: 22px;}
