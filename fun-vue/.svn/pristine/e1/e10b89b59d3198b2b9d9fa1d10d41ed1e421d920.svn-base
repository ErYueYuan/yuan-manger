<script>
import Vue from 'vue'
import { mapGetters } from 'vuex'
import { FooterPanel } from '@/components/index'
import { api_service, api_sell } from '@/api/index'
import * as scroll from '@/common/Scroll'
import * as tool from '@/common/Tool'

import {
  Popup, DatetimePicker, DropdownMenu, DropdownItem,
  Form, Field, Picker, Search, List, Empty
} from 'vant';
import RulesVue from '../home/Rules.vue'
Vue.use(Picker)
Vue.use(Empty)
Vue.use(Search)
Vue.use(Popup)
Vue.use(Form)
Vue.use(Field)
Vue.use(List)
Vue.use(DatetimePicker)
Vue.use(DropdownMenu);
Vue.use(DropdownItem);
export default {
  data() {
    return {
      searchval: '',//搜索值
      sels: 1,
      statusList: [],//状态列表
      stateVal: '',//状态值
      statusName: '状态',
      typeList: [],//险种列表
      typeVal: '',//险种值
      typeName: '险种',
      list: [],
      total: 0,
      offset: 0,
      limit: 10,
      isLoad: true,
      allLoaded: false,
      queryLoading: true,
      type: 0,//未完成0完成1
      show: false,
      currentDate: new Date(),
      timer: false,
      effectivestart: '',
      effectiveEnd: '',
      nextPaystart: '',
      nextPayEnd: '',
      expirystart: '',
      expiryEnd: '',
      timetype: '',
      timeNum: '',
      selct: false,
      showMore: false,
      indexs: '',
      statusl: 'ch_order_status',
      entry: 'time'
    }
  },
  created() {
    this.chOrderStatus();
    this.chRiskType();
  },
  computed: {
    ...mapGetters(['user']),
  },
  mounted() {
    this.orderList();
    window.addEventListener('scroll', this.handleScroll)
  },
  components: {
    'footer-panel': FooterPanel,
  },
  methods: {
    changeState(type, str) {
      if (str == 'done') {
        if (type == 0) {
          this.clearnull();
        }
        this.stateVal = '';
        this.typeVal = '';
        this.offset = 0;
        this.type = type;
        this.orderList();
      } else if (str == 'sel') {
        this.selct = true;
        this.sels = type;
      }
      this.chOrderStatus();
    },
    chOrderStatus() {
      if (this.type == 0) {
        this.statusl = 'ch_order_status'
      } else if (this.type == 1) {
        this.statusl = 'fun_policy_status'
      }
      const _data = { type: `${this.statusl}/` + tool.app.platformCode + '/' + tool.app.saasId }
      api_sell.sysDict(_data).then(data => {
        let sList = [];
        let json = {
          text: '全部',
          value: '',
        }
        sList.push(json);
        data.params.dicts.forEach((item) => {
          var obj = {
            text: item.name,
            value: item.value
          }
          sList.push(obj);
        });
        this.statusList = JSON.parse(JSON.stringify(sList));
      })
    },
    chRiskType() {
      api_service.chRiskType().then(data => {
        let tList = [];
        let json = {
          text: '全部',
          value: '',
        }
        tList.push(json);
        data.forEach(item => {
          var obj = {
            text: item.name,
            value: item.value
          }
          tList.push(obj);
        });
        this.typeList = JSON.parse(JSON.stringify(tList));
      })
    },
    chooseState(picker) {
      if (this.sels == 1) {
        this.stateVal = picker.value;
        this.statusName = picker.text
        if (picker.value == '') {
          this.statusName = '状态';
        }
      } else if (this.sels == 2) {
        this.typeName = picker.text
        this.typeVal = picker.value;
        if (picker.value == '') { this.typeName = '险种' }
      }
      this.selct = false;
      this.offset = 0;
      this.orderList();
    },
    orderList() {
      let _data = {
        saasId: this.user.userInfo.saasId,
        userId: this.user.userInfo.userId,
        offset: this.offset,
        limit: this.limit,
        agentCode: this.user.userInfo.agentcode,
        type: this.type,
        search: this.searchval,
        riskType: this.typeVal
      }
      if (this.type == 1) {
        _data.policyStatus = this.stateVal
        if (this.effectivestart != '') {
          _data.effectiveStartDate = this.effectivestart
        }
        if (this.effectiveEnd != '') {
          _data.effectiveEndDate = this.effectiveEnd
        }
        if (this.nextPaystart != '') {
          _data.nextPayStartDate = this.nextPaystart
        }
        if (this.nextPayEnd != '') {
          _data.nextPayEndDate = this.nextPayEnd
        }
        if (this.expirystart != '') {
          _data.expiryStartDate = this.expirystart
        }
        if (this.expiryEnd != '') {
          _data.expiryEndDate = this.expiryEnd
        }
      }else{
        _data.orderStatus = this.stateVal
      }

      api_service.orderList(_data).then(res => {
        if (res.status == tool.rtCode.status) {
          this.isLoad = false
          this.total = res.total
          if (this.offset === 0 || this.list.length === 0) {
            this.list = res.funOrderList ? res.funOrderList : []
            if (this.list.length < this.total) {
              this.queryLoading = false
            }
          } else {
            this.list = this.list.concat(res.funOrderList)
          }
          this.allLoaded = this.list.length >= this.total
          if (this.allLoaded) {
            this.queryLoading = true
          }
        } else {
          tool.toastMessage(res.message, 'error')
          this.list = [];
        }
      })
    },
    goOrderLog(ordersn) {
      this.$router.push({ name: 'orderLogList', params: { q: ordersn } });
    },
    searchLike() {
      this.search = this.searchval;
      this.offset = 0;
      this.orderList();
    },
    goDetail(item) {
      this.$router.push({ name: 'customerDetail', params: { q: item.clientId, r: item.resultId } });
      // this.$router.push({ name: 'customerDetail', params: { q: item.clientId, r: item.customerId, s: item.resultId } });
    },
    resetLoad() {
      this.orderList();
    },
    timerchang(str, val) {
      this.timetype = str;
      this.timeNum = val;
      this.timer = true;
    },
    confirm(val) {
      let year = val.getFullYear()
      let month = val.getMonth() + 1
      let day = val.getDate()
      if (month >= 1 && month <= 9) { month = `0${month}` }
      if (day >= 1 && day <= 9) { day = `0${day}` }
      let value = `${year}-${month}-${day}`
      if (this.timetype == "effective") {
        if (this.timeNum == "1") {
          this.effectivestart = value;
        } else {
          this.effectiveEnd = value;
        }
      } else if (this.timetype == "nextPay") {
        if (this.timeNum == "1") {
          this.nextPaystart = value;
        } else {
          this.nextPayEnd = value;
        }
      } else if (this.timetype == "expiry") {
        if (this.timeNum == "1") {
          this.expirystart = value
        } else {
          this.expiryEnd = value;
        }
      }
      this.timer = false;
    },
    confirmtime() {
      this.orderList(this.entry);
      this.show = false;
    },
    formatter(type, value) {
      if (type === 'year') {
        return `${value}年`
      } else if (type === 'month') {
        return `${value}月`
      } else if (type === 'day') {
        return `${value}日`
      }
      return value
    },
    clearnull() {
      this.effectivestart = '',
        this.effectiveEnd = '',
        this.nextPaystart = '',
        this.nextPayEnd = '',
        this.expirystart = '',
        this.expiryEnd = '';
    },
    goBack() {
      this.$router.go(-1)
    },
    loadMore() {
      if (this.queryLoading) {
        return
      }
      if (!this.isLoad) {
        this.isLoad = true
        this.offset ++
        this.orderList()
      }
    },
    handleScroll() {
      if (scroll.getScrollTop() + scroll.getClientHeight() > (scroll.getScrollHeight() - 5)) {
        this.loadMore()
      }
    },
    getDetails(item) {
      this.type == 0 ? this.$router.push({ name: 'wdetails', params: { r: item.ordersn } }) : this.$router.push({ name: 'dealdetails', params: { r: item.agentCode, q: item.policyId } })
    },
    goOrderMore(item) {
      const channelUserId = this.user.userInfo.mobile || this.user.userInfo.agentcode
      window.location.href = tool.app.lzgUrl + '#/channel/channelCode=' + tool.app.platformCode + '&channelUserId=' + channelUserId + '&productId=' + item.productCode + '&briskCode' + item.briskCode + '&supplierCode=' + item.insuranceCompanyCode + '&productType=' + item.source + '&orderSn=' + item.ordersn + '&opType=8&version=' + item.version
    },
    goOrderIn(item) {
      const channelUserId = this.user.userInfo.mobile || this.user.userInfo.agentcode
      window.location.href = tool.app.lzgUrl + '#/channel/channelCode=' + tool.app.platformCode + '&channelUserId=' + channelUserId + '&productId=' + item.productCode + '&briskCode' + item.briskCode + '&supplierCode=' + item.insuranceCompanyCode + '&productType=' + item.source + '&orderSn=' + item.ordersn + '&opType=2&version=' + item.version
    },
    showMenu(index) {
      this.showMore = !this.showMore
      if (this.showMore) {
        this.indexs = index;
      } else {
        this.indexs = ''
      }
    },
    orderSta(val) {
      let StatusName = '';
      this.statusList.forEach(item => {
        if (item.value == val) {
          StatusName = item.text;
        }
      })
      return StatusName
    },
    unfinish(val) {
      let unfinish = '';
      this.typeList.forEach(item => {
        if (item.value == val) {
          unfinish = item.text
        }else if(val == '') {
          unfinish = '';
        }
      })
      return unfinish
    }
  },
  destroyed() {
    window.removeEventListener('scroll', this.handleScroll)
  }
}
</script>

