import { mapGetters } from 'vuex'
import { FooterPanel } from '@/components/index'
import { api_my } from '@/api/index'
import * as tool from '@/common/Tool'
import DataSource from '@/common/DataSource'

export default {
  name: "My",
  computed: {
    ...mapGetters(['user']),
  },
  data() {
    return {
      clientNum: '',
      customerCost: '',
      headImg:'',
      query:Object
